<% include ../layouts/base.ejs %>

<div class="container mx-auto px-4 py-8" x-data="{ openSection: null }">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Detalhes da Demanda
            </h3>
            <button @click="openSection = openSection === 'editar' ? null : 'editar'"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Editar
            </button>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Título
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                        <%= demanda.titulo %>
                    </dd>
                </div>
                <!-- Mais campos da demanda aqui -->
            </dl>
        </div>
    </div>

    <!-- Seção Editar (aparece ao clicar em Editar) -->
    <div x-show="openSection === 'editar'" class="mt-5 p-4 bg-white shadow sm:rounded-lg" style="display: none;">
        <form action="/demandas/update/<%= demanda.id %>" method="POST">
            <!-- Campos do formulário para editar a demanda -->
            <div class="mb-4">
                <label for="titulo" class="block text-sm font-medium text-gray-700">Título</label>
                <input type="text" name="titulo" id="titulo" value="<%= demanda.titulo %>" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
            </div>
            <!-- Mais campos de formulário aqui -->
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Salvar Alterações
            </button>
        </form>
    </div>
</div>
